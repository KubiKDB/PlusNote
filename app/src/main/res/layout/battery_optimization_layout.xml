<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/greetings_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25dp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/light_blue_text"
        app:layout_constraintTop_toBottomOf="@id/greetings_title_1part"
        app:layout_constraintBottom_toTopOf="@id/allow"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/greetings_title_3part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€“"
        android:textSize="35dp"
        android:gravity="center_vertical"
        android:textColor="@color/light_blue_text"
        app:layout_constraintLeft_toRightOf="@id/greetings_title_2part"
        app:layout_constraintTop_toTopOf="@id/greetings_title_2part"
        app:layout_constraintBottom_toBottomOf="@id/greetings_title_2part"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/greetings_title_1part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:textColor="@color/light_blue_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/greetings_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_plus_icon"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/greetings_title_1part"
        app:layout_constraintTop_toTopOf="@id/greetings_title_1part"
        app:layout_constraintBottom_toBottomOf="@id/greetings_title_1part"/>

    <TextView
        android:id="@+id/greetings_title_2part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="note"
        android:textSize="30dp"
        android:fontFamily="@font/autour_one_font_file"
        android:gravity="center_vertical"
        android:textColor="#00FF00"
        app:layout_constraintLeft_toRightOf="@id/greetings_image"
        app:layout_constraintTop_toTopOf="@id/greetings_image"
        app:layout_constraintBottom_toBottomOf="@id/greetings_image"/>

    <Button
        android:id="@+id/allow"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#333333"
        android:text="Next"
        android:gravity="start|center_vertical"
        android:textSize="20dp"
        android:paddingStart="10dp"
        android:textColor="#00FF00"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_forward_24"
        android:elevation="3dp"
        android:backgroundTint="@color/orange"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="@id/allow"
        app:layout_constraintTop_toTopOf="@id/allow"
        app:layout_constraintBottom_toBottomOf="@id/allow"/>

</androidx.constraintlayout.widget.ConstraintLayout>